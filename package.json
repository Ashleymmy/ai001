{
  "name": "ai-storyboarder",
  "version": "1.0.0-beta",
  "description": "AI 视频分镜制作助手",
  "author": "AI Storyboarder Team",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "powershell -ExecutionPolicy Bypass -File start.ps1",
    "start:all": "concurrently \"npm run python:dev\" \"npm run dev\"",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "vite build && electron-builder --win",
    "python:dev": "cd backend && python -m pip install -r requirements.txt && python -m uvicorn main:app --reload --port 8001",
    "python:build": "cd backend && pyinstaller --onefile --name backend-server main.py",
    "pack:win": "npm run build && electron-builder --win --dir",
    "dist:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "wavesurfer.js": "file:vendor/wavesurfer.js",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ai-storyboarder.app",
    "productName": "AI Storyboarder",
    "copyright": "Copyright © 2024-2026",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/backend-server.exe",
        "to": "backend/backend-server.exe"
      },
      {
        "from": "backend/data",
        "to": "backend/data",
        "filter": [
          "**/*",
          "!*.db"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI Storyboarder",
      "license": "LICENSE"
    }
  }
}
